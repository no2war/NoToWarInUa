<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	  
  <targets async="true">
    <target name="file" xsi:type="File" fileName="${basedir}/log.txt" />
    <target name="validation" xsi:type="File" fileName="${basedir}/validation.txt" />
    <target name="null" xsi:type="Null" formatMessage="false"  />
  </targets>

  <rules>
    <logger name="Validation" minlevel="Info" writeTo="validation" final="true" />
    <logger name="Validation" minlevel="Trace" writeTo="null" final="true" />
    <logger name="*" minlevel="Info" writeTo="file" />
  </rules>
  
</nlog>
